package br.com.ecommerce.tela;

import javax.swing.JOptionPane;

public class Magica {

	// isso serve para simplificar comandos repetidos - diferenca mostrada no endereco
		public static String s(String msg) {
			return JOptionPane.showInputDialog(msg).toUpperCase();
		}
		
		// esse tb simplifica um outro cmd e usa a função anterior dentro desta - exemplo no cliente
		public static int i(String msg) {
			return Integer.parseInt(s(msg));
		}
		
		// esse tb simplifica um outro cmd e usa a função String dentro desta - exemplo no produto
		public static float f(String msg) {
			return Float.parseFloat(s(msg));
		}
		
	
}
