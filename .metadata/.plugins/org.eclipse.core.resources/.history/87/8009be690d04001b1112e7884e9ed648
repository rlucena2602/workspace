package br.com.universidade.modelo;

/*
 * Design Patterns (melhores praticas em projetos OO)
 * DTO (Data Transfer Object) - melhores praticas para modelos (Beans / JavaBeans / TO / model)
 * 1º sugestão: TODOS atributos devem ser private
 * 2º sugestão: cada atributo deve ter o seu metodo getter(output) e setter(input)
 * 3º sugestão:  
 */

public class aluno {

	private int rm;
	private String nome;
	private String email;
	
	
	public String getAll() {
		return
				"RM....:" + rm + "\n" +
				"Nome..:" + nome + "\n" +
				"Email.:" + email; 
	}
	
	public void setAll (int p1 , String p2 , String p3 ) {
		rm = p1;
		nome = p2;
		email = p3;		
	}
	
	public int getRm() {
		return rm;
	}
	public void setRm(int rm) {
		this.rm = rm;
	}
	public String getNome() {
		return nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public String getEmail() {
		return email;
	}
	public void setEmail(String email) {
		this.email = email;
	}
	
	
	
}
